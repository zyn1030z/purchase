<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_request_form_view" model="ir.ui.view">
            <field name="name">purchase_request.purchase_request.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form string="Purchase request">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="test" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="test1"/>
                            </group>
                            <group>
                                <field name="test2"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_request_tree_view" model="ir.ui.view">
            <field name="name">purchase_request.purchase_request.tree</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="test"/>
                    <field name="test1"/>
                </tree>
            </field>
        </record>

        <record id="purchase_request_act_window" model="ir.actions.act_window">
            <field name="name">Purchase Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Purchase Request" id="purchase_request_menu"  action="purchase_request_act_window"/>

    </data>
</odoo>