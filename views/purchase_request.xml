<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_request_tree" model="ir.ui.view">
            <field name="name">purchase.request.tree</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <tree string="Purchase Request">
                    <field name="name"/>
                    <field name="request_by"/>
                    <field name="department"/>
                    <field name="cost_total"/>
                </tree>
            </field>
        </record>

        <record id="purchase_request_form" model="ir.ui.view">
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form string="Purchase Request">
                    <header>
                        <button string="Gửi duyệt" type="object" states='draft'
                                class="oe_highlight"/>
                        <button string="Phê duyệt" type="object" states='waiting_for_approval'
                                class="oe_highlight"/>
                        <button string="Từ chối" type="object" states='waiting_for_approval'
                                class="oe_highlight"/>
                        <button string="Hoàn thành" type="object" states='approved'
                                class="oe_highlight"/>
                        <button string="Hủy bỏ" type="object" states='approved'
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,waiting_for_approval,approved,complete,cancel"
                               clickable="true"/>
                    </header>
                    <sheet>
                        <div>
                            <label for="month" string="Mã phiếu"
                                   style="font-weight: bold !important;margin-right:107px;margin-left:0px;"/>
                            <field name="name" class="oe_inline">
                                purchase.request
                            </field>
                        </div>
                        <!--                        <div class="oe_title">-->
                        <!--                            <h1>-->
                        <!--                                <field name="name" placeholder="Mã name" required="True"/>-->
                        <!--                            </h1>-->
                        <!--                        </div>-->
                        <group>
                            <group>
                                <field name="request_by"/>
                                <field name="department"/>
                                <field name="check_by"/>
                                <field name="cost_total"/>
                            </group>
                            <group>
                                <field name="creation_date"/>
                                <field name="due_date"/>
                                <field name="approved_date"/>
                                <field name="company"/>
                            </group>
                        </group>
                        <!--                        <notebook>-->
                        <!--                            <page name="room_ids" string="Danh sách phòng thuê">-->
                        <!--                                <group>-->
                        <!--                                    <field name="room_booking_ids" nolabel="1">-->
                        <!--                                        <tree string="Danh sách phòng" editable="bottom">-->
                        <!--                                            <field name="customer_id"/>-->
                        <!--                                            <field name="identify_number"/>-->
                        <!--                                            <field name="phone"/>-->
                        <!--                                            <field name="number_of_persons"/>-->
                        <!--                                            <field name="room_id"/>-->
                        <!--                                            <field name="room_type"/>-->
                        <!--                                            <field name="room_view"/>-->
                        <!--                                            <field name="room_price"/>-->
                        <!--                                            <field name="start_date"/>-->
                        <!--                                            <field name="end_date"/>-->
                        <!--                                            <field name="state"/>-->
                        <!--                                        </tree>-->
                        <!--                                    </field>-->
                        <!--                                </group>-->
                        <!--                            </page>-->
                        <!--                        </notebook>-->
                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_request_act" model="ir.actions.act_window">
            <field name="name">Purchase Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hotel_room_booking_menu" name="Purchase Request Menu"
                  action="purchase_request_act" sequence="1"/>
    </data>
</odoo>
