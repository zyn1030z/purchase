<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_request_tree" model="ir.ui.view">
            <field name="name">purchase.request.tree</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <tree string="Purchase Request">
                    <field name="name"/>
                    <field name="request_by"/>
                    <field name="department"/>
                    <field name="cost_total"/>
                </tree>
            </field>
        </record>

        <record id="purchase_request_form" model="ir.ui.view">
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form string="Purchase Request" attrs="{'edit': [('states','=','draft')]}">
                    <header>
                        <button string="Gửi duyệt" type="object" states='draft'
                                class="oe_highlight" name="test1"/>
                        <button string="Phê duyệt" type="object" states='waiting_for_approval'
                                class="oe_highlight"/>
                        <button string="Từ chối" type="object" states='waiting_for_approval'
                                class="oe_highlight"/>
                        <button string="Hoàn thành" type="object" states='approved'
                                class="oe_highlight"/>
                        <button string="Hủy bỏ" type="object" states='approved'
                                class="oe_highlight"/>
                        <button string="Chuyển về dự thảo" type="object" states='reject, cancel'
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,waiting_for_approval,approved,complete,reject,cancel"
                               clickable="true"/>
                    </header>
                    <sheet>
                        <div>
                            <label for="month" string="Mã phiếu"
                                   style="font-weight: bold !important;margin-right:107px;margin-left:0px;"/>
                            <field name="name" class="oe_inline">

                            </field>
                        </div>

                        <group>
                            <group>
                                <field name="request_by"/>
                                <field name="department"/>
                                <field name="check_by"/>
                                <field name="cost_total"/>
                            </group>
                            <group>
                                <field name="creation_date"/>
                                <field name="due_date"/>
                                <field name="approved_date"/>
                                <field name="company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Chi tiết">
                                <field name="order_request_line">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="unit_measure"/>
                                        <field name="product_qty"/>
                                        <field name="price_unit"/>
                                        <field name="price_subtotal"/>
                                        <field name="due_date"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="purchase_request_act" model="ir.actions.act_window">
            <field name="name">Purchase Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hotel_room_booking_menu" name="Purchase Request Menu"
                  action="purchase_request_act" sequence="1"/>
    </data>
</odoo>
