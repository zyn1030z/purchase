<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_request_form_view" model="ir.ui.view">
            <field name="name">ProjectName.purchase_request.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <header>
                        <field name="state" widget="statusbar" nolabel="1" statusbar_visible="booking,in_use,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="code" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="MÃ£ name" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="request_by"/>
                                <field name="department"/>
                                <field name="cost_total"/>
                            </group>
                            <group>
                                <field name="creation_date"/>
                                <field name="due_date"/>
                                <field name="state"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_request_tree_view" model="ir.ui.view">
            <field name="name">purchase_request.purchase_request.tree</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="name"/>
                    <field name="request_by"/>
                    <field name="department"/>
                    <field name="cost_total"/>
                    <field name="creation_date"/>
                    <field name="due_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="purchase_request_act_window" model="ir.actions.act_window">
            <field name="name">ModelTitle</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="purchase request" id="purchase_request_menu"
                  action="purchase_request_act_window"/>

    </data>
</odoo>